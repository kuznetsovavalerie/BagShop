@model BagShop.Models.OrderViewModel
@{
    ViewBag.Title = "Подтверждение заказа";
}

<div class="row">
    <div class="col-offset-4"></div>
    <div class="col-lg-4">
        <div class="col-lg-12">
            @Html.TextBoxFor(m => m.FirstName)
            @Html.TextBoxFor(m => m.LastName)
            <label>+380</label>
            @Html.TextBoxFor(m => m.PhoneNumber, new { minlength = "9", maxlength = "9" })
        </div>
    </div>
    <div class="col-offset-4"></div>
</div>
<div class="row">
    <div class="col-lg-12">
        @Html.ActionLink("На главную", "Index", "Home", new { @class = "btn btn-default" })
        @Html.ActionLink("Подтвердить", "Confirm", "Home", Model, new { @class = "btn btn-primary pull-right" })
    </div>
</div>

