<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-lg-3">
            <div class="col-lg-12">
                <img src="@product.TitleImage" />
            </div>
            <div class="col-lg-12">
                @Html.ActionLink(product.Title, "View", "Home", new { productId = product.ID }, new { @class = "" })
            </div>
            <div class="col-lg-12">
                @Html.ActionLink("Купить", "Buy", "Home", product.ID, new { @class = "btn btn-default" })
            </div>
        </div>
    }
</div>