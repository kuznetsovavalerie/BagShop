            </div>
        </div>

        <hr />

        <div class="row" id="catalog">
            @foreach (var product in Model)
            {
                <div class="col-sm-4 text-center product-preview">
                    @*<div class="colours">
                        @foreach (var colour in product.Colours)
                        {
                            <img class="img-circle" src="@colour.PreviewImage" />
                        }
                    </div>*@
                    <a href="../Home/View?productId=@product.ID">
                        <img class="title-img" src="@product.TitleImage" />
                    </a>
                    <h3>@product.Price грн</h3>
                    <a href="../Home/View?productId=@product.ID">@product.Title</a>
                </div>
            }
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.navbar').addClass('transparent');

        $(document).scroll(function () {
            var top = $(document).scrollTop();
            var height = $('#lookbook-carousel').height();

            if (top > height - 20) {
                $('.navbar').removeClass("transparent");
            }
            else {
                $('.navbar').addClass("transparent");
            }
        });

        //$('#about-us-block').css('margin-top', $('#lookbook-carousel').height() - 50);
    });
</script>